{
  "name": "@agent-pulse/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Agent Pulse - on-chain liveness signaling protocol",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.0"
  },
  "keywords": [
    "agent-pulse",
    "liveness",
    "base",
    "ethereum",
    "sdk",
    "agents",
    "x402",
    "micropayments"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/agent-pulse.git",
    "directory": "packages/sdk"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
